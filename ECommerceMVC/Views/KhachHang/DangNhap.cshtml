@model ECommerceMVC.ViewModels.LoginVM
@{
	ViewData["Title"] = "Đăng Nhập";
}
<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4 text-center">Đăng Nhập</h1>
		<form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			@* Tên Đăng Nhập *@
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-6">
					<div class="form-item w-100">
						<label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.UserName" class="form-control">
						<span asp-validation-for="@Model.UserName" class="text-danger"></span>
					</div>
				</div>
			</div>

			@* Mật Khẩu *@
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-6">
					<div class="form-item w-100">
						<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.Password" class="form-control">
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>
				</div>
			</div>

			@* Submit *@
			<div class="row g-4 text-center align-items-center justify-content-center pt-4">
				<div class="col-md-12 col-lg-6">
					<button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
				</div>
			</div>
			<div class="row g-4 text-center align-items-center justify-content-center pt-4">
				<div class="col-md-12 col-lg-6">
					<a asp-controller="KhachHang" asp-action="QuenMatKhau" class="btn border-danger w-100">Quên Mật Khẩu</a>
				</div>
			</div>
		</form>
	</div>
</div>